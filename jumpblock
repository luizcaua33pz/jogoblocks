<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jogo de Corrida</title>
    <style>
        body {
            text-align: center;
            font-family: Arial, sans-serif;
        }
        canvas {
            border: 2px solid black;
            background-color: lightgray;
        }
        #reiniciar {
            margin-top: 10px;
            padding: 10px;
            font-size: 16px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <h1>Jogo de Corrida</h1>
    <canvas id="gameCanvas" width="600" height="300"></canvas>
    <br>
    <button id="reiniciar" onclick="reiniciarJogo()">Reiniciar</button>
    <script>
        const canvas = document.getElementById("gameCanvas");
        const ctx = canvas.getContext("2d");

        let jogador = { x: 50, y: 250, largura: 30, altura: 30, velocidadeY: 0, pulando: false };
        let obstaculos = [];
        let jogoRodando = true;
        let pontuacao = 0;

        function criarObstaculo() {
            let altura = 40;
            let largura = 20;
            let x = canvas.width;
            let y = canvas.height - altura;
            obstaculos.push({ x, y, largura, altura });
        }

        function atualizar() {
            if (!jogoRodando) return;
            
            jogador.velocidadeY += 1.5; 
            jogador.y += jogador.velocidadeY;
            if (jogador.y > 250) {
                jogador.y = 250;
                jogador.velocidadeY = 0;
                jogador.pulando = false;
            }
            
            for (let i = 0; i < obstaculos.length; i++) {
                obstaculos[i].x -= 5;
                if (
                    jogador.x < obstaculos[i].x + obstaculos[i].largura &&
                    jogador.x + jogador.largura > obstaculos[i].x &&
                    jogador.y < obstaculos[i].y + obstaculos[i].altura &&
                    jogador.y + jogador.altura > obstaculos[i].y
                ) {
                    jogoRodando = false;
                    alert("Game Over! Pontuação: " + pontuacao);
                    return;
                }
            }
            if (Math.random() < 0.02) criarObstaculo();
            pontuacao++;
        }

        function desenhar() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            
            ctx.fillStyle = "blue";
            ctx.fillRect(jogador.x, jogador.y, jogador.largura, jogador.altura);
            
            ctx.fillStyle = "red";
            for (let obs of obstaculos) {
                ctx.fillRect(obs.x, obs.y, obs.largura, obs.altura);
            }
            
            ctx.fillStyle = "black";
            ctx.font = "20px Arial";
            ctx.fillText("Pontuação: " + pontuacao, 10, 30);
        }

        function loop() {
            atualizar();
            desenhar();
            if (jogoRodando) requestAnimationFrame(loop);
        }

        document.addEventListener("keydown", function (event) {
            if (event.code === "Space" && !jogador.pulando) {
                jogador.velocidadeY = -15;
                jogador.pulando = true;
            }
        });

        function reiniciarJogo() {
            jogador.y = 250;
            jogador.velocidadeY = 0;
            jogador.pulando = false;
            obstaculos = [];
            jogoRodando = true;
            pontuacao = 0;
            loop();
        }

        loop();
    </script>
</body>
</html>
